<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="h3 mb-3 fw-normal text-center">RecipeBook</h1>
  <h2 class="h3 mb-3 fw-normal text-center">Please Log In</h2>
  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "johndoe@gmail.com" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %>
    <%= f.label :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
