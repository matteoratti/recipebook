<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <h1 class="h3 mb-3 fw-normal text-center">RecipeBook</h1>
  <h2 class="h3 mb-3 fw-normal text-center">Forgot your password?</h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "johndoe@gmail.com" %>
    <%= f.label :email %>
  </div>

  <%= f.submit "Reset password", class: "w-100 btn btn-lg btn-primary mt-3" %>
<% end %>

<%= render "devise/shared/links" %>