<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h1 class="h3 mb-3 fw-normal text-center">RecipeBook</h1>
  <h2 class="h3 mb-3 fw-normal text-center">Please Sign Up</h2>
  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "johndoe@gmail.com" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "password" %>
    <%= f.label :password %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "new-password" %>
    <%= f.label :password_confirmation %>
  </div>

    <%= f.submit "Sign Up", class: "w-100 btn btn-lg btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>