<!-- update view-all button with viewed-all text and viceversa -->
<%= turbo_stream.update nested_dom_id('notification-view-all') do %>
  <%= render "shared/notifications-view-all", new_notifications: false %>
<% end %>

<!-- replace all mark as read buttons with confirmation icons -->
<% @notifications_ids.each do |id| %>
  <%= turbo_stream.replace nested_dom_id('notification-view-icon', id) do %>
     <i class="bi bi-check-lg text-success fs-3"></i>
  <% end %>
<% end %>

<!-- update notifications counter -->
<%= turbo_stream.replace "notifications-count" do %>
  <%= render "shared/notifications-count", count: 0 %>
<% end %>

