<%= turbo_frame_tag(nested_dom_id(recipe, step), class:"col-4") do %>

  <div class="card shadow-sm">
    <div class="card-body">
      <small class="text-muted"><%= step.order %>.</small>
      <h4><%= step.description %></h4>
      <p class="card-text"><%= step.body %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "Edit",
                      [:edit,recipe, step],
                      data: { turbo_frame: nested_dom_id(recipe, Step.new) },
                      class: "btn btn-sm btn-outline-secondary" %>
          <%= button_to "Delete",
                        [recipe, step],
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger" %>
        </div>
        <small class="text-muted"><%= step.duration %> min</small>
      </div>
    </div>
  </div>

<% end %>