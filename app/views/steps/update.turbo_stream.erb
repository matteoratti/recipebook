<%= turbo_stream.update nested_dom_id("new_step"), "" %>

<%= turbo_stream.update nested_dom_id(@step) do %>
  <%= render @step %>
<% end %>

<%= turbo_stream.update nested_dom_id(@recipe, "recipe_ingredients") do %>
   <%= render "recipes/recipe_ingredients", recipe_ingredients: @recipe.recipe_step_ingredients %>
<% end %>